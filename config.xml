<?xml version="1.0" encoding="UTF-8"?>  

<widget xmins ="http://www.w3.org/ns/widgets"
xmlns:gap="http://phonegap.com/ns/1.0"
id = "com.phonegap.app4"
version ="1.0.0">

<name>app4-Dia Internacional de La Madre Tierra</name>

<description>
Aplicacione que muestra la informacion sobre El Dia internacional de la madre Tierra
</description>

<author href="https://build.phonegap.com" email="raidersoutlas@gmail.com">
Carlos Palma Coyotl
</author>

<!--perzonaliza la aplicacion y plataforma-->
<preference name="orientation" value="default"/>
<!--preference name="orientation" value="portrait"/>
<preference name="orietation" value="landscape"/>-->
<preference name="target-device" value="universal"/>
<preference name="fullscreen" value="true"/>
<preference name="android-installLocation" value="auto"/>
<preference name="permissions" value="INTERNET"/>

<!--Plugins-->
<plugin name="cordova-plugin-device" spec="~1.1.4"/>
<plugin name="cordova-plugin-vibration" spec="~2.1.3"/>
<plugin name="cordova-plugin-dialogs" spec="~1.3.1"/>

<!--<plugin name="cordova-plugin-geolocation" source="npm"/>-->
<!--Para accesar a paginas de internet-->
<allow-intent href="https://*/*"/>
<acceso origin="https://*/*"/>
<allow-intent href="https://*/*"/>
<acceso origin="https://*/*"/>
<plugin name="cordova-plugin-whitelist" source="npm"/>
<!--Colocar icono app-->

<icon src="res/android/mdpi.png"/>

</widget>